<div class="container-fluid">
	<div class="row-fluid">
		<div class="span6">
			<b>User Data:</b>
			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th>
							User_ID
						</th>
						<th>
							Name
						</th>
						<th>
							Link_ID
						</th>
						<th>
							Comment
						</th>
					</tr>
				</thead>
				<tbody>
  					<tr>
  						<td><%= @user.id %></td>
    					<td><%= @user.name %></td>
    					<td><%= @user.link_id %></td>
    					<td><%= @user.comment %></td>
  					</tr>
				</tbody>
			</table>
			
			<% if @user.comment != "" %>
				<b>Offers:</b>
				<% if @user.link.shop.count != 0 %>
				<% @user.link.shop.each do |obj| %>
				<table class="table table-striped table-bordered table-condensed">
  					
        				<td><b><%= obj.name %></b></td>
        				<td><%= obj.offer %></td>
    				
    			<% end %>
    			<% end %>
    			</table>
  			<% end %>
		</div>
	</div>
</div>





<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', serch_path %>
